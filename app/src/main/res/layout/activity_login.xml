<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/app_logo_view"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/logo_layout_margin_top"
        android:src="@drawable/img_app_name_logo"/>

    <ImageView
        android:id="@+id/company_logo_view"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_below="@+id/app_logo_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/img_company_logo"/>

    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/company_logo_view"
        android:layout_marginTop="@dimen/login_layout_margin_top"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_input_height"
            android:paddingLeft="15dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/ic_user"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textColor="@color/label_text_color"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="@string/id"
                android:visibility="gone"/>
            <com.mjict.signboardsurvey.widget.SimpleSpinner
                android:id="@+id/id_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">
            </com.mjict.signboardsurvey.widget.SimpleSpinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_input_height"
            android:layout_marginTop="18dp"
            android:paddingLeft="15dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:addStatesFromChildren="true">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/ic_lock"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textColor="@color/label_text_color"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="@string/password"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/input_layout"
        android:background="@drawable/btn_basic_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/login"
        android:textStyle="bold"
        android:textSize="20sp"/>

</RelativeLayout>


