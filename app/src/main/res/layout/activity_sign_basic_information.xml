<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary" >
        <ImageButton
            android:id="@+id/back_image_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_left_arrow_sel"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="?attr/actionBarSize"
            android:layout_toRightOf="@+id/back_image_button"
            android:gravity="center"
            android:text="@string/basic_information"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/next_button"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="@string/next"
            android:textColor="@color/navi_btn_text_color_sel"
            android:layout_alignParentRight="true"
            android:gravity="center"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_box"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/sign_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"/>
                <ImageButton
                    android:id="@+id/sign_measure_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/add_sign_image_button"
                    android:background="@null"
                    android:src="@drawable/ic_measure_sel"
                    android:visibility="gone"/>
                <ImageButton
                    android:id="@+id/add_sign_image_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:src="@drawable/ic_camera2_sel"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/sign_label_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="@string/content"
                    android:drawableLeft="@drawable/ic_dot_resize"
                    android:drawablePadding="@dimen/sign_label_dot_padding"/>
                <EditText
                    android:id="@+id/content_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/sign_label_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="@string/type"
                    android:drawableLeft="@drawable/ic_dot_resize"
                    android:drawablePadding="@dimen/sign_label_dot_padding"/>
                <com.mjict.signboardsurvey.widget.SimpleSpinner
                    android:id="@+id/sign_type_spinner"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/sign_label_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="@string/status"
                    android:drawableLeft="@drawable/ic_dot_resize"
                    android:drawablePadding="@dimen/sign_label_dot_padding"/>
                <com.mjict.signboardsurvey.widget.SimpleSpinner
                    android:id="@+id/status_spinner"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/size_label"
                    android:layout_width="@dimen/sign_label_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="@string/size"
                    android:drawableLeft="@drawable/ic_dot_resize"
                    android:drawablePadding="@dimen/sign_label_dot_padding"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">
                    <EditText
                        android:id="@+id/width_edit_text"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:gravity="center_vertical"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:text="@string/multiply_sign"/>
                    <EditText
                        android:id="@+id/length_edit_text"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:gravity="center_vertical"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/sign_label_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="@string/light"
                    android:drawableLeft="@drawable/ic_dot_resize"
                    android:drawablePadding="@dimen/sign_label_dot_padding"/>
                <Spinner
                    android:id="@+id/light_type_spinner"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="네온사인"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/location_label"
                    android:layout_width="@dimen/sign_label_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="@string/placed_location"
                    android:drawableLeft="@drawable/ic_dot_resize"
                    android:drawablePadding="@dimen/sign_label_dot_padding"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">
                    <EditText
                        android:id="@+id/placed_floor_edit_text"
                        android:layout_width="@dimen/sign_floor_text_width"
                        android:layout_height="match_parent"
                        android:inputType="numberSigned"
                        android:gravity="center_vertical"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:text="@string/divide_sign"/>
                    <EditText
                        android:id="@+id/total_floor_edit_text"
                        android:layout_width="@dimen/sign_floor_text_width"
                        android:layout_height="match_parent"
                        android:inputType="numberSigned"
                        android:gravity="center_vertical"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:text="@string/floor_count"/>
                    <EditText
                        android:id="@+id/height_edit_text"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:text="@string/meter"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/building_location"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_dot_resize"
                android:drawablePadding="@dimen/sign_label_dot_padding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:background="@drawable/bg_white_box"
                    android:layout_marginRight="5dp"
                    android:padding="2dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/img_building_location1"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"/>
                    <CheckBox
                        android:id="@+id/front_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:duplicateParentState="true"
                        android:text="@string/front"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:background="@drawable/bg_white_box"
                    android:layout_marginRight="5dp"
                    android:padding="2dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/img_building_location2"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"/>
                    <CheckBox
                        android:id="@+id/intersection_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:duplicateParentState="true"
                        android:text="@string/intersection"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:background="@drawable/bg_white_box"
                    android:layout_marginRight="5dp"
                    android:padding="2dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/img_building_location3"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"/>
                    <CheckBox
                        android:id="@+id/front_back_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:duplicateParentState="true"
                        android:text="@string/front_back"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>