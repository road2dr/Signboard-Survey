<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <item name="android:textViewStyle">@style/MJTextViewStyle</item>
        <item name="android:buttonStyle">@style/MJButtonStyle</item>
        <item name="android:imageButtonStyle">@style/MJImageButtonStyle</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
    </style>


    <style name="MyPopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/bg_option_menu</item>
        <item name="android:popupElevation">0dp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- style for white radio -->
    <style name="WhiteRadioChecked">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WhiteRadioDefault">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MJTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MJButtonStyle" parent="Base.TextAppearance.AppCompat.Widget.Button" >
        <item name="android:background">@drawable/btn_basic_button</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/basic_btn_text_color_sel</item>
    </style>

    <style name="MJImageButtonStyle" parent="MJButtonStyle" >
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>



</resources>
